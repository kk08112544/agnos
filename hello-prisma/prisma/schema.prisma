generator client {
  provider = "prisma-client-js"
 // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender{
  M 
  F
}

model staff {
  id Int @default(autoincrement()) @id
  name String
  lastname String
  username String
  password String
  hospital String
}

model patient{
  id Int @default(autoincrement()) @id
  first_name_th String
  middle_name_th String?
  last_name_th String
  first_name_en String
  middle_name_en String?
  last_name_en String
  date_of_birth DateTime
  patient_hn String
  national_id String
  passport_id String
  phone_number String
  email String
  gender  Gender
}


